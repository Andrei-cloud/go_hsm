    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/go_hsm/main.go",
            "env": {
                "DEBUG": "true",
                "HUMAN": "true"
            }
        },
        // run debug on current module
        {
            "name": "Run Current Module",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {
                "DEBUG": "true",
                "HUMAN": "true"
            }
        }
    ]
}